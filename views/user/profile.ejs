                              <% orders.forEach(order => { %>
                                <tr>
                                  <td><%= order.orderId %></td>
                                  <td><%= new Date(order.createdOn).toLocaleDateString('en-US', { 
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                  }) %></td>
                                  <td>
                                    <span class="badge <%= 
                                      order.status === 'Delivered' ? 'bg-success' : 
                                      order.status === 'Cancelled' ? 'bg-danger' : 
