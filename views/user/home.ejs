<!-- Featured Products Section -->
<section class="featured-section">
    <div class="container">
        <div class="section-title">
            <h2>Featured Products</h2>
            <p>Discover our handpicked selection of exceptional artworks</p>
        </div>
        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="product-card">
                        <div class="product-image">
                            <a href="/productDetails?id=<%= product._id %>">
                                <img 
                                    src="<%= product.product_img && product.product_img.length > 0 ? `/uploads/re-image/${product.product_img[0]}` : '/uploads/re-image/default.jpeg' %>" 
                                    alt="<%= product.name %>"
                                    onerror="this.onerror=null; this.src='/uploads/re-image/default.jpeg';"
                                >
                            </a>
                            <% if (product.hasValidOffer) { %>
                                <div class="offer-badge">
                                    <span><%= product.offerPercentage %>% OFF</span>
                                </div>
                            <% } %>
                            <% if (product.available_quantity === 0) { %>
                                <div class="out-of-stock-overlay">Out of Stock</div>
                            <% } %>
                            <button class="wishlist-btn" onclick="toggleWishlist(this, '<%= product._id %>')" data-product-id="<%= product._id %>">
                                <i class="far fa-heart"></i>
                            </button>
                        </div>
                        <div class="product-details">
                            <h5 class="product-name text-truncate">
                                <a href="/productDetails?id=<%= product._id %>" class="text-dark text-decoration-none"><%= product.name %></a>
                            </h5>
                            <div class="product-price">
                                <% if (product.hasValidOffer) { %>
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="current-price fw-bold">₹<%= product.currentPrice %></span>
                                        <span class="original-price text-muted">₹<%= product.originalPrice %></span>
                                    </div>
                                <% } else { %>
                                    <span class="fw-bold">₹<%= product.Sale_price %></span>
                                <% } %>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <% if (product.available_quantity === 0) { %>
                                    <span class="badge bg-danger-subtle text-danger">Out of Stock</span>
                                <% } else { %>
                                    <span class="badge bg-success-subtle text-success">In Stock</span>
                                <% } %>
                                <button onclick="addToCart('<%= product._id %>', 1)" 
                                        class="btn btn-outline-dark btn-sm"
                                        <%= product.available_quantity === 0 ? 'disabled' : '' %>>
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<script>
    async function addToCart(productId, quantity) {
        try {
            const response = await fetch('/add-to-cart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId: productId,
                    quantity: quantity
                })
            });

            const data = await response.json();
            
            if (response.ok) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: 'Product added to cart successfully',
                    showConfirmButton: false,
                    timer: 1000
                }).then(() => {
                    // Refresh the page after the alert closes
                    window.location.reload();
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: data.message || 'Failed to add product to cart'
                });
            }
        } catch (error) {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Something went wrong!'
            });
        }
    }

    async function toggleWishlist(button, productId) {
        try {
            const response = await fetch('/toggle-wishlist', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId: productId
                })
            });

            const data = await response.json();
            
            if (response.ok) {
                // Show success message and refresh page
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: data.message,
                    showConfirmButton: false,
                    timer: 1000
                }).then(() => {
                    window.location.reload();
                });
            } else {
                throw new Error(data.message || 'Failed to toggle wishlist');
            }
        } catch (error) {
            if (error.message === 'Please login to add items to wishlist') {
                window.location.href = '/login';
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: error.message || 'Something went wrong!',
                });
            }
        }
    }

    // Check initial wishlist status for all products
    async function checkWishlistStatus() {
        const wishlistButtons = document.querySelectorAll('.wishlist-btn');
        wishlistButtons.forEach(async (button) => {
            const productId = button.getAttribute('data-product-id');
            try {
                const response = await fetch(`/wishlist-status/${productId}`);
                const data = await response.json();
                if (data.inWishlist) {
                    button.classList.add('active');
                    const icon = button.querySelector('i');
                    icon.classList.remove('far');
                    icon.classList.add('fas');
                }
            } catch (error) {
                console.error('Error checking wishlist status:', error);
            }
        });
    }

    // Call on page load
    document.addEventListener('DOMContentLoaded', function() {
        checkWishlistStatus();
    });
</script>

