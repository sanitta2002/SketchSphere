			<h2 class="text-center mb-5">Featured Products</h2>
			<div class="row">
				<% if (typeof products !== 'undefined' && products && products.length > 0) { %>
					<% products.forEach(function(product) { %>
						<div class="col-md-6 col-lg-3 p-b-30 m-lr-auto">
							<!-- Block1 -->
							<div class="block1 wrap-pic-w">
								<img src="<%= product.product_img && product.product_img.length > 0 ? `/uploads/re-image/${product.product_img[0]}` : '/uploads/re-image/default.jpeg' %>" 
									onerror="this.onerror=null; this.src='/uploads/re-image/default.jpeg';"
									 alt="<%= product.name %>" 
									 style="width: 100%; height: 250px; object-fit: cover;">

								<div class="product-details text-center p-3">
									<h5 class="product-name mb-2"><%= product.name %></h5>
									
									<div class="product-price">
										<% if (product.offerPrice && product.offerPrice < product.Sale_price) { %>
											<span class="text-danger">₹<%= product.offerPrice %></span>
											<span class="text-muted text-decoration-line-through">₹<%= product.Sale_price %></span>
										<% } else { %>
											<span class="text-dark">₹<%= product.Sale_price %></span>
										<% } %>
									</div>

									<div class="product-actions mt-3">
										<a href="/productDetails?id=<%= product._id %>" class="btn btn-outline-dark btn-sm me-2">
											View Details
										</a>
										<% if (product.quantity > 0) { %>
											<button class="btn btn-dark btn-sm add-to-cart" data-product-id="<%= product._id %>">
												Add to Cart
											</button>
										<% } else { %>
											<button class="btn btn-secondary btn-sm" disabled>
												Out of Stock
											</button>
										<% } %>
									</div>
								</div>
							</div>
						</div>
					<% }); %>
				<% } else { %>
					<div class="col-12 text-center">
						<p>No products available at the moment.</p>
					</div>
				<% } %>
			</div>

			<% if (typeof products !== 'undefined' && products && products.length >= 8) { %>
				<div class="text-center mt-4">
					<a href="/shop" class="btn btn-dark">View All Products</a>
				</div>
			<% } %>
		</div>
