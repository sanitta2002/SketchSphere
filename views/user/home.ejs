            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</section>

<!-- Featured Products Section -->
<section class="featured-section">
    <div class="container">
        <div class="section-title" data-aos="fade-up">
            <h2>Featured Products</h2>
            <p>Discover our handpicked selection of exceptional artworks</p>
        </div>
        <div class="featured-slider" data-aos="fade-up" data-aos-delay="100">
            <div class="swiper">
                <div class="swiper-wrapper">
                    <% products.forEach(product => { %>
                        <div class="swiper-slide">
                            <div class="product-card">
                                <div class="product-image">
                                    <a href="/productDetails?id=<%= product._id %>">
                                        <img 
                                            src="<%= product.product_img && product.product_img.length > 0 ? `/uploads/re-image/${product.product_img[0]}` : '/uploads/re-image/default.jpeg' %>" 
                                            alt="<%= product.name %>"
                                            onerror="this.onerror=null; this.src='/uploads/re-image/default.jpeg';"
                                        >
                                    </a>
                            <% if (product.hasValidOffer) { %>
                                <div class="offer-badge">
                                    <span><%= product.offerPercentage %>% OFF</span>
                                </div>
                            <% } %>
                                    <% if (product.available_quantity === 0) { %>
                                        <div class="out-of-stock-overlay">Out of Stock</div>
                                    <% } %>
                                    <button class="wishlist-btn" onclick="toggleWishlist(this, '<%= product._id %>')" data-product-id="<%= product._id %>">
                                        <i class="far fa-heart"></i>
                                    </button>
                                </div>
                                <div class="product-details">
                                    <h5 class="product-name text-truncate">
                                        <a href="/productDetails?id=<%= product._id %>" class="text-dark text-decoration-none"><%= product.name %></a>
                                    </h5>
                                    <div class="product-price">
                                <% if (product.hasValidOffer) { %>
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="current-price fw-bold">₹<%= product.currentPrice %></span>
                                        <span class="original-price text-muted">₹<%= product.originalPrice %></span>
                                    </div>
                                <% } else { %>
                                        <span class="fw-bold">₹<%= product.Sale_price %></span>
                                <% } %>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <% if (product.available_quantity === 0) { %>
                                            <span class="badge bg-danger-subtle text-danger">Out of Stock</span>
                                        <% } else { %>
                                            <span class="badge bg-success-subtle text-success">In Stock</span>
                                        <% } %>
                                        <button onclick="addToCart('<%= product._id %>', 1)" 
                                                class="btn btn-outline-dark btn-sm"
                                                <%= product.available_quantity === 0 ? 'disabled' : '' %>>
                                            Add to Cart
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
                <div class="swiper-pagination"></div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
        </div>
    </div>
</section>

