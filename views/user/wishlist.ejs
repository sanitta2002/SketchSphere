<%- include('../layouts/user/header.ejs') %>

<!-- Wishlist Section -->
<div class="wishlist-container py-5">
    <div class="container">
        <div class="row p-5">
            <div class="col-12">
                <div class="wishlist-header mb-4">
                    <h2 class="section-title">My Wishlist</h2>
                    <p class="text-muted">Items you've saved for later</p>
                </div>
            </div>
        </div>

        <% if (wishlistItems && wishlistItems.length > 0) { %>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                <% wishlistItems.forEach(product => { %>
                    <div class="col">
                        <div class="wishlist-item">
                            <div class="product-image">
                                <img src="<%= product.product_img && product.product_img.length > 0 ? `/uploads/re-image/${product.product_img[0]}` : '/uploads/re-image/default.jpeg' %>" 
                                     alt="<%= product.name %>">
                                <button class="remove-btn" onclick="removeFromWishlist(this, '<%= product._id %>')">
                                    <i class="fas fa-times"></i>
                                </button>
                                <% if (product.Sale_price < product.Regular_price) { %>
                                    <!-- <div class="discount-badge">
                                        -<%= Math.round((product.Regular_price - product.Sale_price) / product.Regular_price * 100) %>%
                                    </div> -->
                                <% } %>
                            </div>
                            <div class="product-info">
                                <h3 class="product-title"><%= product.name %></h3>
                                <div class="price-container">
                                    <span class="current-price">₹<%= product.Sale_price %></span>
                                    <% if (product.Regular_price > product.Sale_price) { %>
                                        <span class="original-price">₹<%= product.Regular_price %></span>
                                    <% } %>
                                </div>
                                <button onclick="addToCart('<%= product._id %>', 1)" class="add-to-cart-btn">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-wishlist">
                <div class="empty-wishlist-content">
                    <i class="far fa-heart"></i>
                    <h3>Your wishlist is empty</h3>
                    <p>Browse our products and add items you love!</p>
                    <a href="/shop" class="browse-btn">Browse Products</a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<style>
    .wishlist-container {
        background-color: #f8f9fa;
        min-height: 80vh;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .wishlist-item {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .wishlist-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .product-image {
        position: relative;
        padding-top: 100%;
        overflow: hidden;
    }

    .product-image img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .wishlist-item:hover .product-image img {
        transform: scale(1.05);
    }

    .remove-btn {
        position: absolute;
        top: 12px;
        right: 12px;
        background: white;
        border: none;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        opacity: 0;
        transform: translateY(-10px);
    }

    .wishlist-item:hover .remove-btn {
        opacity: 1;
        transform: translateY(0);
    }

    .remove-btn:hover {
        background: #ff4444;
        color: white;
        transform: rotate(90deg);
    }

    .discount-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background: #ff4444;
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .product-info {
        padding: 1.5rem;
    }

    .product-title {
        font-size: 1.1rem;
        font-weight: 500;
        color: #2c3e50;
        margin-bottom: 0.75rem;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .price-container {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 1rem;
    }

    .current-price {
        font-size: 1.2rem;
        font-weight: 600;
        color: black;
    }

    .original-price {
        font-size: 1rem;
        color: #95a5a6;
        text-decoration: line-through;
    }

    .add-to-cart-btn {
        width: 100%;
        padding: 0.8rem;
        border: none;
        border-radius: 8px;
        background:black;
        color: white;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .add-to-cart-btn:hover {
        background: black;
        transform: translateY(-2px);
    }

    .empty-wishlist {
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .empty-wishlist-content {
        padding: 2rem;
    }

    .empty-wishlist i {
        font-size: 4rem;
        color: #95a5a6;
        margin-bottom: 1.5rem;
    }

    .empty-wishlist h3 {
        font-size: 1.5rem;
        color: black;
        margin-bottom: 0.5rem;
    }

    .empty-wishlist p {
        color: #95a5a6;
        margin-bottom: 1.5rem;
    }

    .browse-btn {
        display: inline-block;
        padding: 0.8rem 2rem;
        background: black;
        color: white;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .browse-btn:hover {
        background:black;
        transform: translateY(-2px);
        color: white;
    }

    @media (max-width: 768px) {
        .section-title {
            font-size: 1.75rem;
        }

        .wishlist-item {
            margin-bottom: 1rem;
        }

        .remove-btn {
            opacity: 1;
            transform: none;
        }
    }
</style>

<script>
    async function removeFromWishlist(button, productId) {
        try {
            const response = await fetch('/toggle-wishlist', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId: productId
                })
            });

            const data = await response.json();
            
            if (response.ok) {
                // Remove the product card from the page
                const productCard = button.closest('.col');
                productCard.remove();

                // Check if there are any products left
                const remainingProducts = document.querySelectorAll('.product-card');
                if (remainingProducts.length === 0) {
                    // If no products left, show empty wishlist message
                    location.reload();
                }

                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: data.message,
                    showConfirmButton: false,
                    timer: 1500
                });
            } else {
                throw new Error(data.message || 'Failed to remove from wishlist');
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: error.message || 'Something went wrong!',
            });
        }
    }

    async function addToCart(productId, quantity) {
        try {
            const response = await fetch('/add-to-cart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    productId: productId,
                    quantity: quantity
                })
            });

            const data = await response.json();
            
            if (response.ok) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: 'Product added to cart successfully',
                    showConfirmButton: false,
                    timer: 1500
                });
            } else {
                throw new Error(data.message || 'Failed to add to cart');
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: error.message || 'Something went wrong!',
            });
        }
    }
</script>

<%- include('../layouts/user/footer.ejs') %>
