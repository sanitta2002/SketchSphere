<%- include('../../views/layouts/admin/header.ejs') %>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>

<section class="content-main">
    <% if (typeof successMessage !== 'undefined' && successMessage) { %>
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: '<%= successMessage %>',
                timer: 3000,
                showConfirmButton: false
            });
        </script>
    <% } %>

    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: '<%= errorMessage %>',
                timer: 3000,
                showConfirmButton: false
            });
        </script>
    <% } %>

    <div class="content-header mb-4">
        <div class="row align-items-center">
            <div class="col-auto">
                <h2 class="content-title">Products List</h2>
            </div>
            <div class="col">
                <form action="" method="get" class="float-end">
                    <div class="input-group" style="width: 300px;">
                        <input type="text" 
                               class="form-control" 
                               placeholder="Search products or brands" 
                               name="search">
                        <button class="btn btn-light" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Sale Price</th>
                            <th>Offer Price</th>
                            <th>Offer</th>
                            <th>Quantity</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(function(product) { %>
                            <tr>
                                <td class="text-dark">
                                    <span class="fw-bold"><%= product.name %></span>
                                </td>
                                <td><%= product.category_id.name %></td>
                                <td>₹<%= product.Sale_price %></td>
                                <td>
                                    <% if (product.offerPrice > 0 && new Date(product.offerEndDate) > new Date()) { %>
                                        ₹<%= product.offerPrice %>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td>
                                    <% if(!product.offerPrice) { %>
                                        <a href="/admin/products/<%= product._id %>/add-offer" class="add-offer-btn">
                                            <i class="fas fa-plus"></i> Add Offer
                                        </a>
                                    <% } else { %>
                                        <div class="offer-container">
                                            <span class="offer-badge">
                                                <i class="fas fa-tag"></i> <%= product.offerPercentage %>% OFF
                                            </span>
                                        </div>
                                        <a href="/admin//products/<%= product._id %>/remove-offer" class="remove-offer-btn">
                                            <i class="fas fa-times"></i> Remove Offer
                                        </a>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">
                                        <%= product.available_quantity || 0 %>
                                    </span>
                                </td>
                                <td>
                                    <% if(product.isBlocked === false) { %>
                                        <button class="btn btn-sm btn-outline-danger block-btn" data-id="<%= product._id %>">
                                            Block
                                        </button>
                                    <% } else { %>
                                        <button class="btn btn-sm btn-outline-success unblock-btn" data-id="<%= product._id %>">
                                            Unblock
                                        </button>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/admin/editProduct?id=<%= product._id %>" class="btn btn-sm btn-outline-dark">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>

<div class="container mt-3">
    <% if (totalPages > 1) { %>
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
                        <a class="page-link rounded-circle mx-1 <%= (i === currentPage) ? 'bg-dark border-dark' : '' %>" 
                           href="?page=<%= i %>">
                            <%= i %>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</div>

<style>
    .offer-badge {
        background: #28a745;
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }
    
    .offer-badge i {
        font-size: 0.8rem;
    }
    
    .offer-container {
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .remove-offer-btn {
        padding: 4px 8px;
        border-radius: 4px;
        background: #dc3545;
        border: none;
        color: white;
        cursor: pointer;
        transition: background-color 0.2s;
    }
    
    .remove-offer-btn:hover {
        background: #c82333;
    }
    
    .add-offer-btn {
        padding: 6px 12px;
        border-radius: 4px;
        background: #007bff;
        border: none;
        color: white;
        cursor: pointer;
        transition: background-color 0.2s;
        font-size: 0.9rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }
    
    .add-offer-btn:hover {
        background: #0056b3;
        color: white;
        text-decoration: none;
    }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script>
    $(document).ready(function() {
        // Block product
        $('.block-btn').click(function() {
            const button = $(this);
            const productId = button.data('id');
            
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to block this product?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, block it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `/admin/blockProduct?id=${productId}`,
                        method: 'GET',
                        success: function(response) {
                            if (response.success) {
                                Swal.fire(
                                    'Blocked!',
                                    'Product has been blocked.',
                                    'success'
                                ).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'Error!',
                                    'Failed to block product.',
                                    'error'
                                );
                            }
                        },
                        error: function() {
                            Swal.fire(
                                'Error!',
                                'Failed to block product.',
                                'error'
                            );
                        }
                    });
                }
            });
        });

        // Unblock product
        $('.unblock-btn').click(function() {
            const button = $(this);
            const productId = button.data('id');
            
            Swal.fire({
                title: 'Are you sure?',
                text: "Do you want to unblock this product?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, unblock it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: `/admin/unblockProduct?id=${productId}`,
                        method: 'GET',
                        success: function(response) {
                            if (response.success) {
                                Swal.fire(
                                    'Unblocked!',
                                    'Product has been unblocked.',
                                    'success'
                                ).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire(
                                    'Error!',
                                    'Failed to unblock product.',
                                    'error'
                                );
                            }
                        },
                        error: function() {
                            Swal.fire(
                                'Error!',
                                'Failed to unblock product.',
                                'error'
                            );
                        }
                    });
                }
            });
        });
    });
</script>

<script>
function removeOffer(productId) {
    Swal.fire({
        title: 'Are you sure?',
        text: "This will remove the offer from this product",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, remove it!'
    }).then((result) => {
        if (result.isConfirmed) {
            // Create a form dynamically
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = `/admin/products/${productId}/remove-offer`;
            
            // Append form to body and submit
            document.body.appendChild(form);
            form.submit();
        }
    });
}
</script>

