					<!-- Icon header -->
					<div class="wrap-icon-header flex-w flex-r-m">
						<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
							<!-- Dropdown Trigger -->
							<a href="#" class="" id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="fa-solid fa-user" style="color: #000000;"></i>
							</a>
						
							<!-- Dropdown Menu -->
							<ul class="dropdown-menu text-center p-2" aria-labelledby="accountDropdown" style="min-width: 150px;">
								<% if (typeof user === 'undefined' || !user) { %>
								<li>
									<a class="dropdown-item text-dark py-2" href="/login">
										<i class="fas fa-sign-in-alt me-3"></i>Login
									</a>
								</li>
								<li>
									<a class="dropdown-item text-dark py-2" href="/signup">
										<i class="fas fa-user-plus me-3"></i>Sign Up
									</a>
								</li>
								<% } else { %>
								<li>
									<div class="dropdown-item d-flex align-items-center py-2 px-3 text-dark">
										<i class="fas fa-user me-3" style="color: #666;"></i>
										<span>Welcome, <%= user.name %></span>
									</div>
								</li>
								<li>
									<a class="dropdown-item d-flex align-items-center py-2 px-3 text-dark hover-effect" href="/profile" style="text-decoration: none; transition: all 0.3s ease;">
										<i class="fas fa-user me-3" style="color: #666;"></i>
										<span>User Profile</span>
									</a>
								</li>
								<li>
									<a class="dropdown-item d-flex align-items-center py-2 px-3 text-dark hover-effect" href="/logout" style="text-decoration: none; transition: all 0.3s ease;">
										<i class="fas fa-sign-out-alt me-3" style="color: #666;"></i>
										<span>Logout</span>
									</a>
								</li>
								<% } %>
							</ul>
						</div>
						

						<!--  -->

						<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti position-relative">
							<a href="/cart" class="text-dark">
								<i class="fa-solid fa-cart-plus"></i>
								<% if (typeof cart !== 'undefined' && cart && cart.items && cart.items.length > 0) { %>
									<span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
										<%= cart.items.length %>
										<span class="visually-hidden">items in cart</span>
									</span>
								<% } %>
							</a>
						</div>

						<a href="/wishlist" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti" data-notify="">
							<i class="fa-regular fa-heart" style="color: #000000;"></i>
							<% if (locals.wishlistCount && wishlistCount > 0) { %>
								<span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
									<%= wishlistCount %>
									<span class="visually-hidden">items in wishlist</span>
								</span>
							<% } %>
						</a>
					</div>
