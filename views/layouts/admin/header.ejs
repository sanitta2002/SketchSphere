<style>
:root {
    --primary-color: #1a1a1a;
    --secondary-color: #333333;
    --accent-color: #000000;
    --text-color: #2c3e50;
    --light-bg: #f8f9fa;
    --white: #ffffff;
    --shadow: 0 2px 15px rgba(0,0,0,0.08);
    --hover-shadow: 0 5px 20px rgba(0,0,0,0.15);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

body {
    background-color: var(--light-bg);
    font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
    color: var(--text-color);
}

/* Navbar Styling */
.navbar {
    background-color: var(--white);
    padding: 1rem 1.5rem;
    box-shadow: var(--shadow);
    position: sticky;
    top: 0;
    z-index: 1000;
}

.navbar-aside {
    background-color: var(--white);
    box-shadow: var(--shadow);
    width: 280px;
    transition: var(--transition);
}

/* Menu Items Styling */
.menu-item a.menu-link {
    color: var(--text-color);
    font-size: 0.95rem;
    font-weight: 500;
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    border-radius: 12px;
    margin: 0.3rem 1rem;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.menu-item a.menu-link::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 0;
    background-color: var(--accent-color);
    opacity: 0.1;
    transition: var(--transition);
}

.menu-item a.menu-link:hover::before {
    width: 100%;
}

.menu-item a.menu-link i {
    margin-right: 12px;
    font-size: 1.2rem;
    color: var(--secondary-color);
    transition: var(--transition);
}

.menu-item a.menu-link .text {
    font-weight: 500;
    letter-spacing: 0.3px;
}

.menu-item a.menu-link:hover,
.menu-item a.menu-link.active {
    background-color: var(--accent-color);
    color: var(--white);
    transform: translateX(5px);
    box-shadow: var(--shadow);
}

.menu-item a.menu-link:hover i,
.menu-item a.menu-link.active i {
    color: var(--white);
    transform: scale(1.1);
}

/* Brand Styling */
.brand-wrap {
    padding: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--white);
    border-bottom: 1px solid var(--light-bg);
    transition: var(--transition);
}

.brand-wrap:hover {
    background-color: var(--light-bg);
}

.brand-wrap .logo {
    height: 50px;
    transition: var(--transition);
}

.brand-wrap:hover .logo {
    transform: scale(1.05);
}

/* Header Components */
.main-header {
    background-color: var(--white);
    padding: 1rem;
    margin-bottom: 2rem;
    box-shadow: var(--shadow);
}

.content-header {
    padding: 2rem;
    background-color: var(--white);
    border-radius: 15px;
    box-shadow: var(--shadow);
    margin-bottom: 2rem;
    transition: var(--transition);
}

.content-header:hover {
    box-shadow: var(--hover-shadow);
}

/* Card Styling */
.card {
    border: none;
    border-radius: 15px;
    box-shadow: var(--shadow);
    transition: var(--transition);
    background-color: var(--white);
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: var(--hover-shadow);
}

.card-header {
    background-color: var(--white);
    border-bottom: 1px solid var(--light-bg);
    padding: 1.5rem;
    border-radius: 15px 15px 0 0 !important;
}

/* Button Styling */
.btn {
    border-radius: 10px;
    padding: 0.7rem 1.5rem;
    font-weight: 500;
    transition: var(--transition);
}

.btn-primary {
    background-color: var(--accent-color);
    border: none;
}

.btn-primary:hover {
    background-color: var(--secondary-color);
    transform: translateY(-2px);
    box-shadow: var(--shadow);
}

/* Table Styling */
.table {
    background-color: var(--white);
    border-radius: 15px;
    overflow: hidden;
    margin-bottom: 0;
}

.table th {
    background-color: var(--light-bg);
    color: var(--text-color);
    font-weight: 600;
    border: none;
    padding: 1rem;
}

.table td {
    vertical-align: middle;
    border-color: var(--light-bg);
    padding: 1rem;
}

.table tr {
    transition: var(--transition);
}

.table tbody tr:hover {
    background-color: rgba(0, 0, 0, 0.02);
}

/* Dropdown Styling */
.dropdown-menu {
    background-color: var(--white);
    border: none;
    box-shadow: var(--hover-shadow);
    border-radius: 12px;
    padding: 0.8rem;
    min-width: 200px;
    margin-top: 10px;
}

.dropdown-item {
    padding: 0.8rem 1.2rem;
    border-radius: 8px;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 500;
}

.dropdown-item:hover {
    background-color: var(--accent-color);
    color: var(--white);
    transform: translateX(5px);
}

.dropdown-item i {
    font-size: 1.1rem;
}

/* Form Controls */
.form-control {
    border-radius: 10px;
    border: 1px solid var(--light-bg);
    padding: 0.8rem 1.2rem;
    transition: var(--transition);
}

.form-control:focus {
    border-color: var(--accent-color);
    box-shadow: 0 0 0 0.2rem rgba(0, 0, 0, 0.1);
}

/* Search Bar */
.searchform .input-group {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--shadow);
}

.searchform .form-control {
    border: none;
    padding: 0.8rem 1.2rem;
}

.searchform .btn {
    background-color: var(--light-bg);
    border: none;
    padding: 0.8rem 1.5rem;
}

.searchform .btn:hover {
    background-color: var(--accent-color);
    color: var(--white);
}

/* Navigation Icons */
.nav-link.btn-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: var(--transition);
    margin: 0 5px;
}

.nav-link.btn-icon:hover {
    background-color: var(--accent-color);
    color: var(--white);
    transform: translateY(-2px);
}

.nav-link.btn-icon i {
    font-size: 1.2rem;
}

/* Profile Image */
.img-xs {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid var(--light-bg);
    transition: var(--transition);
}

.img-xs:hover {
    transform: scale(1.1);
    border-color: var(--accent-color);
}

/* Aside Minimized State */
.aside-mini .navbar-aside {
    width: 80px;
}

.aside-mini .menu-link .text {
    display: none;
}

.aside-mini .menu-link i {
    margin: 0;
}

/* Responsive Adjustments */
@media (max-width: 992px) {
    .navbar-aside {
        width: 100%;
        position: fixed;
        left: -100%;
    }
    
    .navbar-aside.show {
        left: 0;
    }
}
